<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/txt_new_item_title"
            android:text="程序猿媛 八：Android侧滑栏+底部导航栏（选项卡）"
            android:textColor="#191919"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_news_item_user"
                android:src="@drawable/ic_news_item_user_24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/txt_news_item_user"
                android:text="user"
                android:layout_width="80dp"
                android:gravity="center|left"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/img_news_item_scan"
                android:src="@drawable/ic_news_item_scan_24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/txt_news_item_scan"
                android:text="-"
                android:gravity="center|left"
                android:layout_width="40dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/img_news_item_comment"
                android:src="@drawable/ic_news_item_comment_24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/txt_news_item_comment"
                android:text="-"
                android:gravity="center|left"
                android:layout_width="40dp"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>






</android.support.v7.widget.CardView>